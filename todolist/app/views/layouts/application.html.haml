!!! 5
%html
	%head
		%title TODO List!
		#logindisplay.pull-right
			- if user_signed_in?
				Signed in as #{current_user.email}. Not you?
				\#{link_to "Sign out", destroy_user_session_path, :method => :delete}
			- else
				= link_to "Sign up", new_user_registration_path
				or #{link_to "sign in", new_user_session_path}
		= stylesheet_link_tag 'application'
		= javascript_include_tag 'application'
		= csrf_meta_tags
	%body
		.container-fluid
			.row-fluid#header
				.title
					%h1 TODO List Demo Application					
			.row-fluid
				.navbar
					.navbar-inner
						.container-fluid
							.nav-collapse
								%ul{:class=>"nav"}
									%li= link_to "TODO List", :controller => "/todoitem", :action => "index"
									%li{:class=>"divider-vertical"}
			.row-fluid= yield
			.row-fluid#footer
